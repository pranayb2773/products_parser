{
  "name": "pranayb2773/products_parser",
  "description": "Supplier Product List Processor with native PHP",
  "license": "MIT",
  "type": "project",
  "authors": [
    {
        "name": "Pranay Baddam",
        "email": "pranayb2773@gmail.com"
    }
  ],
  "require": {
    "php": "^8.4",
    "ext-pcntl": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.91",
    "pestphp/pest": "^4.1"
  },
  "scripts": {
    "test": "pest",
    "test:phpunit": "phpunit --testdox",
    "test:parallel": "pest --parallel",
    "format": "php-cs-fixer fix",
    "check-format": "php-cs-fixer fix --dry-run --diff"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
